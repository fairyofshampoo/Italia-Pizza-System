<UserControl x:Class="ItaliaPizza.UserInterfaceLayer.OrdersModule.ProductUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizza.UserInterfaceLayer.OrdersModule"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="340">
    <Grid>
        <Button Background="Transparent"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="BtnProductSelected_Click">
            <Border
            Background="#393D42"
            CornerRadius="20"
            Width="335"
            Height="245">
            <Border Background="#D9D9D9"
                    CornerRadius="20"
                    Height="214"
                    Width="291">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Image Source="{Binding ImageSource}" 
                           Width="130" 
                           Height="130"
                           Grid.Row="0"/>

                    <Label
                            x:Name="lblProductName"
                            Grid.Row = "1"
                            FontSize = "15"
                            Foreground = "Black"
                            VerticalAlignment = "Center"
                            Content="Nombre del producto"
                            Margin="20,0,0,0"/>

                </Grid>
            </Border>
        </Border>
        </Button>
    </Grid>
</UserControl>
