<Window x:Class="ItaliaPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza"
        mc:Ignorable="d"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        KeyDown="MainWindow_KeyDown"
        StateChanged="MainWindow_StateChanged">

    <Viewbox Stretch="Fill">
    <Grid Height="720" Width="1280">
        <Frame x:Name="NavigationFrame" NavigationUIVisibility="Hidden" Source ="UserInterfaceLayer/UsersModule/RegisterClientView.xaml" />
    </Grid>
    </Viewbox>
</Window>
